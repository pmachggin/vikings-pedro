<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BjornActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="450dp"
                    android:layout_height="300dp" app:srcCompat="@drawable/bjorn" android:id="@+id/imageView"
                    android:adjustViewBounds="false" android:hapticFeedbackEnabled="false"
                    android:soundEffectsEnabled="false" android:layout_gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"
                    android:text="Bjorn é um personagem principal da segunda, terceira e quarta temporada. Ele apareceu originalmente na primeira temporada como um personagem recorrente. É interpretado por Alexander Ludwig a partir da segunda temporada, substituindo Nathan O'Toole, e fez sua primeira aparição em &quot;Rites of Passage&quot;."
                    android:gravity="center" android:textStyle="bold"/>
            <Button
                    android:text="Athelstan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btAthelstan"/>
            <Button
                    android:text="Floki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btFloki"/>
            <Button
                    android:text="Lagertha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btLagertha"/>
            <Button
                    android:text="Ragnar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btRagnar"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/idMensagem"
                    android:textStyle="italic" android:textColor="@color/colorAccent" android:layout_gravity="center"
                    android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>