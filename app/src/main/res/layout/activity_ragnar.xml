<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RagnarActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="450dp"
                    android:layout_height="300dp" app:srcCompat="@drawable/ragnar"
                    tools:layout_editor_absoluteY="31dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/imageView2" android:layout_gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:text='Ragnar é um personagem principal da primeira, segunda, terceira e quarta temporada. Ele é interpretado por Travis Fimmel e apareceu pela primeira vez em "Rites of Passage". É um poderoso guerreiro viking que acredita estar destinado à grandezas. Ele é impulsionado não apenas pela sua sede de batalha e glória, mas também pela sua sede de conhecimento e natureza inquisitiva.'
                    android:gravity="center" android:textStyle="bold"/>
            <Button
                    android:text="Bjorn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btBjorn"/>
            <Button
                    android:text="Floki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btFloki"/>
            <Button
                    android:text="Lagertha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btLagertha"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/idMensagem" android:textStyle="italic"
                    android:textColor="@color/colorAccent" android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>