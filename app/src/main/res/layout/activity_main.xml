<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/a">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="VIKINGS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:gravity="center"
                    android:textSize="30sp" android:textStyle="bold|italic" android:textColor="@color/colorAccent"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp" app:srcCompat="@drawable/logo"
                    tools:layout_editor_absoluteY="315dp"
                    tools:layout_editor_absoluteX="183dp" android:id="@+id/imageView3"/>
            <TextView
                    android:text="PERSONAGENS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:gravity="center"
                    android:textStyle="bold" android:textColor="@color/colorAccent" android:textSize="18sp"/>
            <Button
                    android:text="Athelstan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="315dp"
                    tools:layout_editor_absoluteX="128dp" android:id="@+id/btAthelstan"/>
            <Button
                    android:text="Bjorn Ironside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="375dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/btBjorn"/>
            <Button
                    android:text="Floki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="252dp"
                    tools:layout_editor_absoluteX="286dp" android:id="@+id/btFloki"/>
            <Button
                    android:text="Lagertha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="315dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/btLagertha"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="37dp"
                    tools:layout_editor_absoluteX="28dp" android:id="@+id/btRagnar" android:text="Ragnar Lothbrok"/>
            <Button
                    android:text="Rollo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="252dp"
                    tools:layout_editor_absoluteX="183dp" android:id="@+id/btRollo"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>