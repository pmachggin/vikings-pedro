<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AthelstanActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="450dp"
                    android:layout_height="300dp" app:srcCompat="@drawable/athelstan" android:id="@+id/imageView5"
                    android:layout_gravity="center"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:text='Athelstan é um personagem principal da primeira, segunda e terceira temporada. Ele é interpretado por George Blagden e apareceu pela primeira vez em "Wrath of the Northmen". Ele reaparece em visões durante a quarta temporada.'
                    android:textStyle="bold" android:gravity="center"/>
            <Button
                    android:text="Bjorn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btBjorn"/>
            <Button
                    android:text="Ragnar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="318dp"
                    tools:layout_editor_absoluteX="54dp" android:id="@+id/btRagnar"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/idMensagem" android:gravity="center"
                    android:textStyle="italic" android:textColorLink="@color/colorPrimary"
                    android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>